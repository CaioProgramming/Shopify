<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Home">


    <TextView
        android:id="@+id/countertxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
         android:drawableStart="@mipmap/basket"
        android:onClick="Startview"
        android:padding="5dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="15sp" />
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:padding="5dp"
            android:onClick="Startadd"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button1"
            android:backgroundTint="@color/md_green_400"
            android:text="Adcionar produto"
            android:textColorHighlight="@color/md_green_900"
            />

        <Button
            android:padding="5dp"

            android:onClick="Startview"
            android:textAlignment="center"
            android:backgroundTint="@color/md_blue_300"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button1"
            android:text="Visualizar lista"
            android:textStyle="bold"
            />

        <Button
            android:padding="5dp"
            android:onClick="Startremove"
            android:backgroundTint="@color/md_red_400"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button1"
            android:text="Remover produto"
            />

        <Button
            android:padding="5dp"
            android:backgroundTint="@color/md_blue_400"
            android:onClick="Startweb"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button1"
            android:text="Acessar web"
            />









    </LinearLayout>

</RelativeLayout>